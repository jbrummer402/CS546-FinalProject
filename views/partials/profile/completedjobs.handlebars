<main>
  <div class="centered main">
    <h1>My Completed Jobs</h1>
    <h2>As Employee:</h2>
    {{#each jobsWorked}}
      <div class="block">
        <div class="jobsWorked">
          <div>Job title:
            <a href="/jobs/{{jobID}}">{{jobTitle}}</a>
          </div>
          <div>Date posted: {{datePosted}}</div>
          {{#if perHour}}
            <div>Compensation: ${{compensation}}/hour</div>
          {{else}}
            <div>Compensation: ${{compensation}}</div>
          {{/if}}
          <div>Employer:
            <a href="/users/{{employerId}}">{{employerName}}</a>
          </div>
          <br />
        </div>
        <div class="jobsWorked">
          <button class="to-employer" type="button" name="{{reviewLink}}">Leave a
            Review!</button>
        </div>
      </div>
    {{/each}}
    <h2>As Employer:</h2>
    {{#each jobsProvided}}
      <div class="block">
        <div class="jobsWorked">
          <div>Job title:
            <a href="/jobs/{{jobID}}">{{jobTitle}}</a>
          </div>
          <div>Date posted: {{datePosted}}</div>
          {{#if perHour}}
            <div>Compensation: ${{compensation}}/hour</div>
          {{else}}
            <div>Compensation: ${{compensation}}</div>
          {{/if}}
          <div>Employee:
            <a href="/users/{{employeeId}}">{{employeeName}}</a>
          </div>
          <br />
        </div>
        <div class="jobsWorked">
          <button class="to-employee" type="button" name="{{reviewLink}}">Leave a
            Review!</button>
        </div>
      </div>
    {{/each}}
    <br />
  </div>
</main>
<script
  src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"
></script>
<script src="/public/js/profile/completejobs.js"></script>