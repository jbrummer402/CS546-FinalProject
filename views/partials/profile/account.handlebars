<div class="centered main">
  <h1>Account</h1>
  <div id='currentUser' title='{{id}}'></div>
  <div id='profile_pic'>
    <img src='{{photo}}' alt='Profile picture not found' width="200" height="200">
    <form id='picUpdateForm' enctype="multipart/form-data">
      <label for='profilePic'>Upload a new profile picture</label>
      <br>
      <input id="profilePic" name="profile_picture" type="file" />
      <button id='profilePicUpdateSubmitBtn' class='profilePicUpdateSubmit' type='submit'>Submit</button>
    </form>
  </div>
  <div id='photoUpdateError'></div>
  <div id='photoUpdateSuccess'></div>
  
  <form id="updateAccountForm" action="/users/{{id}}">
    <label for="firstName">
      First Name
      <br />
      <input
        type="text"
        value={{{firstName}}}
        id="firstName"
        name="firstName"
      />
    </label>
    <br />
    <label for="lastName">
      Last Name
      <br />
      <input type="text" value={{{lastName}}} id="lastName" name="lastName" />
    </label>
    <br />
    <label for="dateOfBirth">
      Date of Birth
      <br />
      <input
        type="text"
        value={{{dateOfBirth}}}
        id="dateOfBirth"
        name="dateOfBirth"
      />
    </label>
    <br />
    <label for="username">
      Username
      <br />
      <input type="text" value={{{username}}} id="username" name="username" disabled/>
    </label>
    <br />
    <label for="email">
      Email
      <br />
      <input type="text" value="{{email}}" id="email" name="email" />
    </label>
    <br />
    <h2>Address</h2>
    <label for="street">
      Street
      <br />
      <input type="text" value="{{address.street}}" id="street" name="street" />
    </label>
    <br />
    <label for="aptNo">
      Apartment Number
      <br />
      <input type="text" value="{{address.aptNo}}" id="aptNo" name="aptNo" />
    </label>
    <br />
    <label for="zipCode">
      Zip Code
      <br />
      <input
        type="text"
        value="{{address.zipCode}}"
        id="zipCode"
        name="zipCode"
      />
    </label>
    <br />
    <label for="state">
      State
      <br />
      <input type="text" value="{{address.state}}" id="state" name="state" />
    </label>
    <br />
    <label for="town">
      Town
      <br />
      <input type="text" value="{{address.town}}" id="town" name="town" />
    </label>
    <br />
    <label for="country">
      Country
      <br />
      <input
        type="text"
        value="{{address.country}}"
        id="country"
        name="country"
        disabled
      />
    </label>
    <br />
    <br />
  </form>
  <div id="updateFormError">
    <ul id='errorList'></ul>
  </div>
  <button type="submit" class='updateAccountBtn'>Update Account</button>
      <br />
      <button type="button" id="deleteBtn">Delete Account</button>
  <a href="/users/signout">Sign Out</a>
</div>
